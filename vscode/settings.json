{
  // Theme & Visual Settings
  "workbench.colorTheme": "Gruvbox Dark Medium",
  "workbench.iconTheme": "a-file-icon-vscode",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 16,
  "workbench.tree.enableStickyScroll": true,
  "workbench.editor.enablePreview": false,

  // Editor Font & Text Settings
  "editor.fontFamily": "Cascadia Code",
  "editor.fontSize": 13,
  "editor.fontWeight": "350",
  "editor.lineHeight": 1.8,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Editor Behavior
  "editor.defaultFormatter": "GitHub.copilot",
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "editor.rulers": [100, 120],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.minimap.enabled": true,

  // File Management
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Explorer Settings
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  // Terminal Settings
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,

  // Git Settings
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,

  // Language Specific
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // GitHub Copilot Configuration
  "github.copilot.chat.localeOverride": "es",
  "github.copilot.chat.followUps": "always",
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.terminalChatLocation": "quickChat",
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.inlineChatCompletionTrigger.enabled": true,
  "github.copilot.chat.inlineChatHint.enabled": true,
  "github.copilot.chat.search.semanticTextResults": true,
  "github.copilot.chat.temporalContext.enabled": true,

  // Other Settings
  "breadcrumbs.enabled": false,
  "chat.editor.fontSize": 12,
  "window.zoomLevel": 0.75,
  "extensions.ignoreRecommendations": true
}
